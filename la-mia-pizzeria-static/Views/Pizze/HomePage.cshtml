@model List<Pizza>
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link href="~/css/site.css" rel="stylesheet" />

    <title>La mia pizzeria</title>
  </head>
  <body>

    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">La mia pizzeria</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        <div class="container">
            <div class="row text-warning bg-white">
                <div class="col-12">
                    <div class="text-center">
                        <h1 class="mt-3 mb-3">il Menù</h1>
                    </div>
                </div>
            </div>
        </div>

        
        <section class="bg-dark">
            <div class="card-group">
            @foreach(Pizza postDellaPizza in Model)
            {
                
            
                

                    <div class="card gy-0 m-1">
                        <img class="card-img-top" src="@postDellaPizza.Image" alt="Card image cap" width="250" height="200">
                        <div class="card-body bg-warning">
                            <h5 class="card-title">@postDellaPizza.Name</h5>
                            <p class="card-text">@postDellaPizza.Description</p>
                        </div>
                        <div class="card-footer">
                            <h5 class="text-center">&euro; @postDellaPizza.Prezzo</h5>
                        </div>
                    </div>

                
                
             }
            </div>
        </section>
    </main>

    

    

    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

  </body>
</html>